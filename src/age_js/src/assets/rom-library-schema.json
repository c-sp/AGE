{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AGE Rom Library",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "roms": {
      "type": "array",
      "description": "AGE Rom Library contents (array of roms)",
      "items": {
        "$ref": "#/definitions/rom"
      }
    }
  },
  "required": [
    "roms"
  ],
  "additionalProperties": false,
  "definitions": {
    "httpsUrl": {
      "type": "string",
      "pattern": "https:\/\/.+"
    },
    "rom": {
      "type": "object",
      "properties": {
        "romTypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "demo",
              "game",
              "intro",
              "invitation"
            ]
          },
          "description": "the type of this rom"
        },
        "romTitle": {
          "type": "string",
          "minLength": 1,
          "description": "this rom's title (must be unique across all roms)"
        },
        "romFileUrl": {
          "$ref": "#/definitions/httpsUrl",
          "description": "the rom file's URL"
        },
        "romAuthors": {
          "type": "string",
          "minLength": 1,
          "description": "this rom's author(s)"
        },
        "romScreenshotUrl": {
          "$ref": "#/definitions/httpsUrl",
          "description": "URL of a rom screenshot"
        },
        "romSiteUrl": {
          "$ref": "#/definitions/httpsUrl",
          "description": "URL of the rom's website"
        },
        "romAuthorsUrl": {
          "$ref": "#/definitions/httpsUrl",
          "description": "URL of the rom authors' website"
        },
        "romSourceUrl": {
          "$ref": "#/definitions/httpsUrl",
          "description": "URL of the rom's source code"
        }
      },
      "required": [
        "romTypes",
        "romTitle",
        "romFileUrl",
        "romAuthors",
        "romScreenshotUrl",
        "romSiteUrl"
      ],
      "additionalProperties": false
    }
  }
}
